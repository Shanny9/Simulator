<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <listener>
    <listener-class>
             utils.TimerManager 
        </listener-class>
  </listener>
  <listener>
    <listener-class>
             utils.SessionCounterListener 
        </listener-class>
  </listener>
  <display-name>Home</display-name>
  <welcome-file-list>
    <welcome-file>opening.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DataController</servlet-name>
    <servlet-class>com.servlet.DataController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DataController</servlet-name>
    <url-pattern>/DataController</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>ITIL Simulator</description>
    <res-ref-name>jdbc/SIMULATOR</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>